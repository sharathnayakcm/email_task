$("#delete_tag_<%=params[:id]%>").remove();

/* Used to update the title and count of the tag icon */
<% tags = @buzz.buzz_tags %>
<% if tags.size > 0 %>
  $("#buzz_tag_img_<%= @buzz.id %>").attr("title", "<%= tags.collect{|bt| bt.tag.name}.join(", ") %>");
  $("#buzz_tag_count_<%= @buzz.id %>").addClass('buzz_icons_count').html("<%= tags.count%>");
<% else %>
  $("#buzz_tag_img_<%= @buzz.id %>").attr("title", "No Tag");
  $("#buzz_tag_count_<%= @buzz.id %>").removeClass('buzz_icons_count').html("");
  $(".buzz_tags").hide();
  $("#no_tags").show();
<% end %>
